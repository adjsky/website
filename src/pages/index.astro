---
import MainLayout from "@/layouts/MainLayout.astro"
import CoolLink from "@/components/CoolLink.astro"
import SwapContent from "@/components/SwapContent"

import { resume, projects, like } from "@/lib/data"
---

<MainLayout title="COOL PAGE!!!">
  <main class="max-w-screen-xl mx-auto px-5">
    <section class="py-0 pb-8 sm:py-16 sm:pb-28 max-w-screen-lg">
      <h1 class="text-2xl sm:text-4.5xl">
        I'm Kirill. I'm a developer, gamer and just a curious guy.
      </h1>
      <hr class="border-none py-2 sm:py-3" />
      <h2 class="text-2xl sm:text-4.5xl">
        <span>I like</span>
        <SwapContent className="text-yellow" content={like} client:only="react"
        />
      </h2>
      <hr class="border-none py-4" />
      <nav>
        <ul
          class="flex flex-col sm:flex-row gap-2 sm:gap-8 text-2xl sm:text-3xl"
        >
          <li>
            <CoolLink href="#projects">projects</CoolLink>
          </li>
          <li>
            <CoolLink href="#resume">resume</CoolLink>
          </li>
        </ul>
      </nav>
    </section>

    <section id="projects" class="max-w-screen-lg">
      <h2 class="text-3xl py-8">projects</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
        {projects.map((project) => (
          <a
            class="bg-gray shadow-gradient group relative rounded-lg"
            href={project.link}
          >
            <div class="from-blue to-pink absolute inset-1 -z-10 bg-gradient-to-tr opacity-0 blur-lg transition group-hover:opacity-100 group-focus:opacity-100" />
            <div class="p-6">
              <img
                src={project.preview}
                width="1920"
                height="1200"
                class="h-auto w-full rounded-lg"
              />
            </div>

            <div class="p-6 pt-0">
              <h3 class="text-xl font-medium">{project.title}</h3>
              <p>{project.description}</p>
            </div>
          </a>
        ))}
      </div>
    </section>

    <hr class="border-none py-6" />

    <section id="resume" class="max-w-screen-lg">
      <h2 class="text-3xl py-8">resume</h2>

      <div class="bg-gray rounded-lg p-6 font-medium grid grid-cols-1 gap-y-6">
        {resume.map((item) => (
          <article>
            <div class="flex flex-col gap-2 sm:flex-row sm:items-end">
              <h3 class="text-blue text-xl font-semibold leading-none">
                {item.company}
              </h3>
              <small class="text-pink text-lg leading-none">
                {item.period}
              </small>
            </div>

            <ul class="list-disc pt-2 pl-5 sm:pt-4">
              {item.problems.map((problem) => (
                <li>{problem}</li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </section>
  </main>
</MainLayout>
